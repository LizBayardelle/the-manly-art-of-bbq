<%= content_for :page_title, 'Edit Your Recipe' %>
<% set_meta_tags description: 'That recipe was almost perfect. Now it will be even better.',
                 keywords: 'edit, change, recipe, BBQ, barbecue, manly, art',
				 site: 'The Manly Art of BBQ' %>


<div class="text-right" style="width: 100%; overflow: hidden; direction: rtl; z-index: 0 !important; position: relative; margin-bottom: -98vh">
  <%= image_tag 'background_edit.jpg', style: "height: 100vh" %>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-push-1 col-md-8 col-md-push-2" style="color: white; background-color: rgba(0, 0, 0, 0.6); margin-top: 115px; padding-bottom: 20px; height: auto; position: relative; z-index: 100 !important">
      <%= form_for @recipe do |f| %>
        <h2 class="text-center">Edit Your Masterpiece</h2>
        <%= f.label "Recipe Name" %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label "Steps to Deliciousness" %>
        <%= f.text_area :instructions, class: "form-control" %>

        <%= f.label "This Recipe Works With:" %>

        <div class="field">
          <%= f.check_box :chicken %>
          <%= f.label "Chicken", style: "margin-top: 0px; margin-bottom: 0px; margin-right: 10px; color: red" %>

          <%= f.check_box :beef %>
          <%= f.label "Beef", style: "margin-top: 0px; margin-bottom: 0px; margin-right: 10px; color: red" %>

          <%= f.check_box :fish %>
          <%= f.label "Fish", style: "margin-top: 0px; margin-bottom: 0px; margin-right: 10px; color: red" %>

          <%= f.check_box :other_meat %>
          <%= f.label "Other Types of Meat", style: "margin-top: 0px; margin-bottom: 0px; margin-right: 10px; color: red" %>

          <%= f.check_box :veggies %>
          <%= f.label "Vegetables", style: "margin-top: 0px; margin-bottom: 0px; margin-right: 10px; color: red" %>
        </div>

        <div class="text-center"><%= f.submit "Share My Delicious Creation", action: :create, class: "hvr-grow btn btn-manly" %></div>
      <% end %>
    <h4 class="text-center"><%= link_to 'Back to List of Recipes', recipes_path %></h4>
  </div> <!-- container -->
</div> <!-- row -->

<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="text-center col-xs-1">
      <% if current_user %>
        <div class="width: 100%"><%= link_to vote_up_recipe_path(recipe), method: :post, remote: true do %><i class="icon ion-thumbsup" style="font-size: 25px"></i><% end %></div>
        <div class="width: 100%"><h3 id="recipe_<%= recipe.id %>_votes" style="margin-top: 0; margin-bottom: 0"><strong><%= recipe.plusminus %></strong></h3></div>
        <div class="width: 100%"><%= link_to vote_down_recipe_path(recipe), method: :post, remote: true do %><i class="icon ion-thumbsdown" style="font-size: 25px"></i><% end %></div>
      <% else %>
        <div class="width: 100%"><%= link_to new_user_session_path, method: :post do %><i class="icon ion-thumbsup" style="font-size: 25px"></i><% end %></div>
        <div class="width: 100%"><h3 style="margin-top: 0; margin-bottom: 0"><strong><%= recipe.plusminus %></strong></h3></div>
        <div class="width: 100%"><%= link_to new_user_session_path, method: :post do %><i class="icon ion-thumbsdown" style="font-size: 25px"></i><% end %></div>
      <% end %>
    </div>

    <div class="col-xs-11"> <!-- non vote container -->

      <h2 style="margin-top: 0px">
        <%= link_to recipe_path(recipe), style: "color: black" do %>
          <%= recipe.name %>
        <% end %>
      </h2>

      <h4><strong><span style="font-family: 'Covered By Your Grace', cursive">Created by BBQ Master <%= recipe.user.first_name %></span></strong></h4>
    </div> <!-- non vote container -->
  </div> <!-- joke row -->

  <div class="row text-center">
    <hr style="width: 50%; margin-top: 30px; margin-bottom: 30px">
  </div> <!-- row -->
<% end %>

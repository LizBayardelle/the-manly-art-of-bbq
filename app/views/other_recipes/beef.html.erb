<%= content_for :page_title, 'Beef Recipes' %>
<% set_meta_tags description: 'There is more to grilling than just basic steak. Here are all the recipes to turn raw beef into grilled, mouth-watering perfection.',
                 keywords: 'beef, recipe, great, grill, grilling, BBQ, barbecue, manly, art',
				 site: 'The Manly Art of BBQ' %>

 <div id='container'>
   <div id="group1">
     <div class="background">
        <div class="hero-image-row">
          <div class="hero-image-outer text-center">
            <div class="hero-image-inner text-center">
              <%= image_tag 'background_beef.jpg', class: "hero-image",alt: "Guys laughing at an obviously hilarious joke while barbecuing." %>
            </div> <!-- hero-image-inner -->
          </div> <!-- hero-image-inner -->
        </div> <!-- row -->


        <div class="overlap-hero-image" style="margin-top: -325px !important; height: 325px">
          <div class="row">
            <div class="text-center">
              <h1 style="margin-bottom: 50px !important">Let's get our beef on.</h1>
              <%= link_to "Submit a New Recipe", new_recipe_path, class: "hvr-grow btn-ghost" %>
              <h4 style="margin-top: 25px"><%= link_to "Back to Recipes Home", home_bbq_path, style: "color: white" %></h4>
            </div> <!-- text-center -->
          </div> <!-- row -->
        </div> <!-- overlap-hero-image -->
    </div> <!-- background -->

    <div class="foreground" style="background-color: white">
      <div class="container" style="margin-top: 25px">

        <div class="joke-container">

          <%= render "recipes" %>

          <div class="text-center" style="height: 40px">
            <%= link_to "Submit a New Recipe", new_recipe_path, class: "hvr-grow btn-manly", style: "color: white" %>
          </div> <!-- text-center -->

        </div> <!-- joke container -->
      </div> <!-- container -->
      <%= render "layouts/footer" %>
    </div> <!-- foreground -->
  </div> <!-- id #parallax group 1 -->
</div> <!-- id #container -->

  <div class="overlap-full-image">
    <div style="height: 80px"></div>

    <div class="container">
      <div class="text-center row" style="margin: 80px 0 20px 0">
        <h1 style="font-size: 10vh">Your Cart</h1>
        <div class="row">
          <p class="col-xs-10 col-xs-push-1 col-sm-8 col-sm-push-2 col-md-6 col-md-push-3">Here lies your selected swag.</br>Excellent choices, Sir.</p>
        </div> <!-- row -->
      </div> <!-- row -->

      <div class="row shopping-cart">
        <%= render "shopping_cart" %>
      </div>

    </div> <!-- container -->
  </div> <!-- overlap-full-image -->
</div> <!-- full hero div -->

<%= render "layouts/footer" %>

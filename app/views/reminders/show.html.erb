<%= content_for :page_title, @reminder.name %>
<% set_meta_tags description: 'Here are all the details on that thing you forgot.',
                 keywords: 'man, reminder, memory, help, BBQ, barbecue, manly, art',
				 site: 'The Manly Art of BBQ' %>


<div class="text-right" style="width: 100%; overflow: hidden; z-index: 0 !important; position: relative">
  <%= image_tag 'background_reminder_show.jpg', style: "height: 100vh; min-width: 100%" %>
</div>

<div class="col-xs-push-1 col-xs-10 col-md-6 transparent-box reminder-show" style="overflow: scroll; margin-top: -85vh; height: 80vh; margin-bottom: 0px; padding-left: 30px; padding-right: 30px; position: relative; z-index: 100 !important">

    <h1 class="text-center"><%= @reminder.name %><h1>
	<h2>Event Details</h2>
	<p><strong>Date: </strong><%= @reminder.event_date.try(:to_formatted_s, :long) %></p>
	<p><strong>Repeats: </strong><%= @reminder.repeating %></p>
	<p><strong>Occasion: </strong><%= @reminder.occasion_type %></p>
	<h2>Reminders and Assistance</h2>
	<p><strong>Reminder Set: </strong><% if @reminder.reminder %>Yes<% else %>No<% end %></p>
	<p><strong>Gift Needed: </strong><% if @reminder.gift %>Unfortunately...<% else %>Nope!<% end %></p>
	<p><strong>Gift Help: </strong><% if @reminder.gift_help %>Yup, we're on it.<% else %>Nope, you're on your own.<% end %></p>
		
  <div class="text-center" style="margin-top: 40px">
    <h4>
      <%= link_to "Edit Reminder", edit_reminder_path(@reminder) %> |
      <%= link_to "Back", :back %> | <%= link_to "Reminder Home", reminders_path %>
    </h4>
  </div>

</div> <!-- transparent box -->

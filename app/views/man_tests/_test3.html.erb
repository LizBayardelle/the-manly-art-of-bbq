<%= form_for @man_test do |f| %>
    <h3>
      <%= f.label "Which is NOT an appropriate name for an acquaintance whose name you've forgotten?" %><br>
      <%= f.radio_button :score, 0 %>
      <%= f.label :score, "Buddy", value: 0 %><br>
      <%= f.radio_button :score, 0 %>
      <%= f.label :score, "Captain", value: 0 %><br>
      <%= f.radio_button :score, 1 %>
      <%= f.label :score, "Consuelo", value: 1 %><br>
      <%= f.radio_button :score, 0 %>
      <%= f.label :score, "Pal", value: 0  %><br>
    </h3>
      <div class="text-center">
        <%= f.submit "Confirm I'm a Man", class: "btn-boring" %>
      </div>
    </h3>
<% end %>

<%= content_for :page_title, 'New Password' %>
<% set_meta_tags description: 'Forgot your password? No problemo. Create a new one here.',
                 keywords: 'password, BBQ, barbecue, manly, art',
				 site: 'The Manly Art of BBQ' %>

<%= image_tag 'Food.jpg', class: "bg",alt: "Mouth-watering barbecued yumminess.  Don't lick your computer, please." %>

<div class="center-vertical col-xs-10 col-xs-push-1 col-sm-8 col-sm-push-2 col-lg-6 col-lg-push-3 transparent-box">

  <h1 class="text-center">Forgot your password?</h1>
  <p class="text-center">No sweat!  We'll send you instructions to get a new one.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Reset Password", class: "hvr-grow btn-manly btn" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>

</div> <!-- transparent-box -->
